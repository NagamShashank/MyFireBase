<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthMainActivity2"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/EmailPasswordAuthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/EmailEdittextAuthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line_edittext"
            android:orientation="vertical">

            <EditText
                android:id="@+id/EmailAuth_Edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:digits="qwertyuiopasdfghjklzxcvbnm@1234567890."
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/Light_white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/EmailAuth_ErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textColor="@color/Red800"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/PasswordEdittextAuthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line_edittext"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/PasswordAuth_Edittext"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/black"
                android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm@#$%*_-+1234567890"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="15"
                android:textColor="@color/white"
                android:textColorHint="@color/Light_white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/PasswordAuth_Toggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/password_invisible"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/PasswordAuth_ErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textColor="@color/Red800"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/UserForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="Forgot Password ?"
            android:layout_gravity="end"/>

        <Button
            android:id="@+id/signIn_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Sign In"
            android:textColor="@color/black"
            android:textColorLink="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:text="Don,t Have Account Then - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/SignUpText"
                android:layout_width="wrap_content"
                android:text="Sign Up"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>